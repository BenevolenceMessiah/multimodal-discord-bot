{
  "compilerOptions": {
    /* Language & module settings */
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",

    /* JSX */
    "jsx": "react-jsx",

    /* Interop & ergonomics */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Only these type librariesâ€”no `electron` here */
    "types": [
      "node",
      "react",
      "react-dom"
    ]
  }
}
