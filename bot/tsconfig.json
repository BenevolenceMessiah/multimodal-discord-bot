{
  // Re-use the shared compiler base in the repo root
  "extends": "../tsconfig.base.json",

  "compilerOptions": {
    /* Modern JS output (import.meta, bigints, etc.) */
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",

    /* Interop & runtime accuracy */
    "downlevelIteration": true,          // fixes Set / Map iterator errors
    "esModuleInterop": true,             // default-import Node/Browsers libs
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Project layout */
    "rootDir": ".",                      // let TS include src + commands + services
    "outDir": "dist"
  },

  /* What to compile */
  "include": [
    "src/**/*",
    "commands/**/*",
    "services/**/*",
    "events/**/*"
  ]
}
